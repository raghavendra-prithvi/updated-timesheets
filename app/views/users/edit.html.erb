<% provide :title do  %>
	<%= @user.name %>
<%end%>

<h1><%= @user.name %></h1>



<div class="row">
	<%= form_for(current_user) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>  
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.label :email %>
			<%= f.text_field :email %>	
			<%= f.label :country %>
			<%= f.select :country, [['Canada','Canada'],['United States','United States'],['Mexico','Mexico'],['France','France'],['UK','UK']] %>
			<%= f.label :password %>
			<%= f.password_field :password %>
			<%= f.label :password_confirmation, "Confirm Password" %>
			<%= f.password_field :password_confirmation %>	<br />
		<%= f.submit "Change Settings", class: "btn btn-large btn-primary" %>
	<% end %>
</div>